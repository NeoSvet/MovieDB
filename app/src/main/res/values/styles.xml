<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="StatusPanel">
        <item name="android:background">?attr/colorPrimary</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="ButtonPanel">
        <item name="android:background">?attr/colorSecondary</item>
        <item name="android:paddingEnd">@dimen/default_margin</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="NoteField">
        <item name="android:background">@drawable/field_with_border</item>
        <item name="android:padding">5dp</item>
        <item name="android:layout_margin">3dp</item>
        <item name="android:gravity">top</item>
        <item name="android:hint">@string/my_note</item>
        <item name="android:inputType">textMultiLine</item>
        <item name="android:textSize">18sp</item>
    </style>
</resources>